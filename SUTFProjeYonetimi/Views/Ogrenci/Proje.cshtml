@model List<SUTFProjeYonetimi.Models.ViewModel.VProje>
@{
	ViewBag.Title = "Proje";

	var projeOnerileri = ViewData["ProjeOnerileri"] as List<SUTFProjeYonetimi.Models.ViewModel.VProjeOneri>;
}


<div id="ribbon">
	<ol class="breadcrumb">
		<li>Proje</li>
		<li>Proje Listesi</li>
	</ol>
</div>
<div id="content">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px">
		<div class="jarviswidget jarviswidget-color-blueLight" id="wid-id-0" data-widget-editbutton="false">
			<header>
				<span class="widget-icon"> <i class="fa fa-table"></i> </span>
				<h2>Onaylanmış Projeler</h2>
			</header>
			<div>
				<div class="jarviswidget-editbox"></div>
				<div class="widget-body no-padding">
					<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
						<thead>
							<tr>
								<th data-class="expand"> Proje Adı</th>
								<th> Danışman</th>
								<th> Etkin</th>
								<th>İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var items in Model)
							{
								<tr>
									<td>@items.ProjeAdi</td>
									<td>@(items.DanismanAd + " " + items.DanismanSoyad)</td>
									<td>@(items.Etkin ? "Etkin" : "Etkin Değil")</td>
									<td>
										<a href="~/Ogrenci/RaporTeslim/@items.ID" class="btn btn-success hidden-sm hidden-xs"><i class="fa fa-check"></i></a>
										<a href="~/Ogrenci/RaporTeslim/@items.ID" class="btn btn-xs btn-success hidden-md hidden-lg"><i class="fa fa-check"></i></a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px">
		<div class="jarviswidget jarviswidget-color-blueLight" id="wid-id-0" data-widget-editbutton="false">
			<header>
				<span class="widget-icon"> <i class="fa fa-table"></i> </span>
				<h2>Proje Önerileri</h2>
			</header>
			<div>
				<div class="jarviswidget-editbox"></div>
				<div class="widget-body no-padding">
					<table id="dt_basic1" class="table table-striped table-bordered table-hover" width="100%">
						<thead>
							<tr>
								<th data-class="expand"> Proje Adı</th>
								<th> Danışman</th>
								<th> Durum</th>
								<th>İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var items in projeOnerileri)
							{
								<tr>
									<td>@items.ProjeAdi</td>
									<td>@(items.DanismanAd + " " + items.DanismanSoyad)</td>
									<td>@((SUTFProjeYonetimi.Models.Enum.ProjeOneriDurumu)items.Durum)</td>
									<td>
										<a href="~/Ogrenci/ProjeOnerisiDetay/@items.ID" class="btn btn-primary hidden-sm hidden-xs"><i class="fa fa-info"></i></a>
										<a href="~/Ogrenci/ProjeOnerisiDetay/@items.ID" class="btn btn-xs btn-primary hidden-md hidden-lg"><i class="fa fa-info"></i></a>
										@if (items.Durum == (int)SUTFProjeYonetimi.Models.Enum.ProjeOneriDurumu.Beklemede)
										{
											<a href="~/Ogrenci/ProjeOneriDuzenle/@items.ID" class="btn btn-warning hidden-sm hidden-xs"><i class="fa fa-pencil"></i></a>
											<a href="~/Ogrenci/ProjeOneriDuzenle/@items.ID" class="btn btn-xs btn-warning hidden-md hidden-lg"><i class="fa fa-pencil"></i></a>
										}
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section scripts
{
	<script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
	<script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
	<script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
	<script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
	<script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>
	<script>
		$(document).ready(function () {
			pageSetUp();
			var responsiveHelper_dt_basic = undefined;
			var responsiveHelper_dt_basic1 = undefined;
			var breakpointDefinition = {
				tablet: 1024,
				phone: 480
			};
			$('#dt_basic').dataTable({
				"sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
					"t" +
					"<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
				"autoWidth": true,
				"oLanguage": {
					"sSearch": '<span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>'
				},
				"preDrawCallback": function () {
					if (!responsiveHelper_dt_basic) {
						responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
					}
				},
				"rowCallback": function (nRow) {
					responsiveHelper_dt_basic.createExpandIcon(nRow);
				},
				"drawCallback": function (oSettings) {
					responsiveHelper_dt_basic.respond();
				}
			});
			$('#dt_basic1').dataTable({
				"sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
					"t" +
					"<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
				"autoWidth": true,
				"oLanguage": {
					"sSearch": '<span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>'
				},
				"preDrawCallback": function () {
					if (!responsiveHelper_dt_basic1) {
						responsiveHelper_dt_basic1 = new ResponsiveDatatablesHelper($('#dt_basic1'), breakpointDefinition);
					}
				},
				"rowCallback": function (nRow) {
					responsiveHelper_dt_basic1.createExpandIcon(nRow);
				},
				"drawCallback": function (oSettings) {
					responsiveHelper_dt_basic1.respond();
				}
			});
		})
	</script>
}

