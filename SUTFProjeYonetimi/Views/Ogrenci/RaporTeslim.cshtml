@model SUTFProjeYonetimi.Models.Proje
@{
	ViewBag.Title = "Rapor Teslim";
}

<div id="ribbon">
	<ol class="breadcrumb">
		<li>Öğrenci</li>
		<li>Proje Raporu Teslimi</li>
	</ol>
</div>
<div id="content">
	<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px">
		<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
			<header>
				<span class="widget-icon"> <i class="fa fa-file"></i> </span>
				<h2>Proje Detay Formu</h2>
			</header>
			<div>
				<div class="jarviswidget-editbox"></div>
				<div class="widget-body container-fluid">
					<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
						<h4>Proje Detayları</h4>
						<hr />
						<div class="table-responsive">
							<table class="table  table-striped table-bordered">
								<tbody>
									<tr>
										<td><b>Proje No.</b></td>
										<td>@Model.ProjeNo</td>
									</tr>
									<tr>
										<td><b>Danışman</b></td>
										<td></td>
									</tr>
									<tr>
										<td><b>Proje Adı</b></td>
										<td>@Model.ProjeAdi</td>
									</tr>
									<tr>
										<td><b>Proje Açıklaması</b></td>
										<td>@Model.ProjeAciklamasi</td>
									</tr>
									<tr>
										<td><b>Başlangıç Tarihi</b></td>
										<td>@Model.BaslangicTarihi.ToString("dd/MM/yyyy")</td>
									</tr>
								</tbody>
							</table>
						</div>

						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
							@using (Html.BeginForm("Rapor Teslim", "Ogrenci", FormMethod.Post, new { enctype = "multipart/form-data" }))
							{
								<div class="form-group">
									<div class="row">
										@Html.Label("Rapor Dosyası", htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
											@Html.TextBox("rapor", "", new { type = "file" })
										</div>
									</div>
								</div>
								@*<div class="form-group">
									<div class="row">
										@Html.Label("Ek Dosya", htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-4 col-xs-4" })
										<div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
											@Html.TextBox("ekdosya", "", new { type = "file" })
										</div>
									</div>
								</div>*@
								<div class="form-group">
									<div class="col-md-offset-2 col-md-10">
										<p><button type="submit" class="btn btn-success"><i class="fa fa-save"></i>  Onayla</button> | @Html.ActionLink("Anasayfaya Dön", "Anasayfa", "Panel", null, new { @class = "btn btn-primary" })</p>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</article>
</div>