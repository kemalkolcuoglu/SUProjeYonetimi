@model SUTFProjeYonetimi.Models.ViewModel.VProjeOneri
@{
	ViewBag.Title = "Proje Öneri Onayı";
}

<div id="ribbon">
	<ol class="breadcrumb">
		<li>Proje</li>
		<li>Proje Öneri Onayı</li>
	</ol>
</div>
<div id="content">
	<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px">
		<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
			<header>
				<span class="widget-icon"> <i class="fa fa-file"></i> </span>
				<h2>Proje Öneri Formu</h2>
			</header>
			<div>
				<div class="jarviswidget-editbox"></div>
				<div class="widget-body container-fluid">
					<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
						<h4>Öğrenci Detayları</h4>
						<hr />
						<div class="table-responsive">
							<table class="table  table-striped table-bordered">
								<tbody>
									<tr>
										<td><b>Öğrenci Numarası</b></td>
										<td>@Model.OgrenciNo</td>
									</tr>
									<tr>
										<td><b>Öğrenci Adı Soyadı</b></td>
										<td>@(Model.OgrenciAd + " " + Model.OgrenciSoyad)</td>
									</tr>
									<tr>
										<td><b>Danışman Adı Soyadı</b></td>
										<td>@(Model.DanismanAd + " " + Model.DanismanSoyad)</td>
									</tr>
								</tbody>
							</table>
						</div>
						<h4>Proje Öneri Detayları</h4>
						<hr />
						<div class="table-responsive">
							<table class="table  table-striped table-bordered">
								<tbody>
									<tr>
										<td><b>Proje Adı</b></td>
										<td>@Model.ProjeAdi</td>
									</tr>
									<tr>
										<td><b>Proje Konusu ve Amacı</b></td>
										<td>@Model.ProjeKonusuAmaci</td>
									</tr>
									<tr>
										<td><b>Maliyet Araştırması</b></td>
										<td>@Model.MaliyetArastirmasi</td>
									</tr>
									<tr>
										<td><b>Çevresel Etkileri</b></td>
										<td>@Model.CevreselEtkileri</td>
									</tr>
									<tr>
										<td><b>Etik Sakıncaları</b></td>
										<td>@Model.EtikSakincalari</td>
									</tr>
									<tr>
										<td><b>Yararlanılan Kaynaklar</b></td>
										<td>@Model.YararlanilanKaynaklar</td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
							<hr />
							<div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-10 col-xs-offset-1">
								@using (Html.BeginForm("OneriOnayi", "Proje", FormMethod.Post))
								{
									@Html.AntiForgeryToken()
									@Html.Hidden("onay", true)
									<button type="submit" class="btn btn-success btn-block">Onayla</button>
								}
							</div>
							<div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-10 col-xs-offset-1">
								@using (Html.BeginForm("OneriRed", "Proje", new { Model.ID }, FormMethod.Post))
								{
									@Html.AntiForgeryToken()
									@Html.Hidden("onay", false)
									<button type="submit" class="btn btn-danger btn-block">Reddet</button>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</article>
</div>