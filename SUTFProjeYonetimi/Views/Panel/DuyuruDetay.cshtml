@model SUTFProjeYonetimi.Models.Duyuru

@{
	ViewBag.Title = "Duyuru Detay";
}

<div id="ribbon">
	<ol class="breadcrumb">
		<li>Duyuru</li>
		<li>Duyuru Detayları</li>
	</ol>
</div>
<div id="content">
	<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px">
		<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
			<header>
				<span class="widget-icon"> <i class="fa fa-file"></i> </span>
				<h2>Duyuru Detayları</h2>
			</header>
			<div>
				<div class="jarviswidget-editbox"></div>
				<div class="widget-body container-fluid">
					<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
						<div class="table-responsive">
							<table class="table  table-striped table-bordered">
								<tbody>
									<tr>
										<td><b>Duyuru Başlığı</b></td>
										<td>@Model.Baslik</td>
									</tr>
									<tr>
										<td><b>Duyuru Metni</b></td>
										<td>@Model.Metin</td>
									</tr>
									<tr>
										<td><b>Tarih</b></td>
										<td>@Model.Tarih.ToString("dd-MM-yyyy")</td>
									</tr>
								</tbody>
							</table>
						</div>

						<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
							<hr />
							@Html.ActionLink("Listeye Dön", "Anasayfa", null, new { @class = "btn btn-primary btn-block" })
						</div>
					</div>
				</div>
			</div>
		</div>
	</article>
</div>
