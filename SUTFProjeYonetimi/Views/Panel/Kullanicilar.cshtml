@model List<SUTFProjeYonetimi.Models.Kullanici>
@{
	ViewBag.Title = "Kullanıcılar";
}

<div id="ribbon">
	<ol class="breadcrumb">
		<li>Panel</li>
		<li>Kullanıcı Listesi</li>
	</ol>
</div>
<div id="content">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-bottom:25px">
		<div class="jarviswidget jarviswidget-color-blueLight" id="wid-id-0" data-widget-editbutton="false">
			<header>
				<span class="widget-icon"> <i class="fa fa-table"></i> </span>
				<h2>Kullanıcılar</h2> <h2><a href="~/Panel/KullaniciEkle" class="btn bg-color-greenDark txt-color-white">Kullanıcı Ekle </a></h2>
			</header>
			<div>
				<div class="jarviswidget-editbox"></div>
				<div class="widget-body no-padding">
					<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
						<thead>
							<tr>
								<th> Kullanıcı Adı</th>
								<th> Yetki</th>
								<th> Etkin/Etkin Değil</th>
								<th> İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var items in Model)
							{
								if (items.Etkin)
								{
									<tr>
										<td>@items.KullaniciAdi</td>
										<td>@((SUTFProjeYonetimi.Models.Enum.Yetkilendirme)items.Yetki)</td>
										<td>Etkin</td>
										<td>
											<a href="~/Panel/KullaniciDuzenle/@items.ID" class="btn btn-warning hidden-sm hidden-xs"><i class="fa fa-pencil"></i></a>
											<a href="~/Panel/KullaniciSil/@items.ID" class="btn btn-danger hidden-sm hidden-xs"><i class="fa fa-times"></i></a>
											<a href="~/Panel/KullaniciDuzenle/@items.ID" class="btn btn-xs btn-warning hidden-md hidden-lg"><i class="fa fa-pencil"></i></a>
											<a href="~/Panel/KullaniciSil/@items.ID" class="btn btn-xs btn-danger hidden-md hidden-lg"><i class="fa fa-times"></i></a>
										</td>
									</tr>
								}
								else
								{
									<tr class="danger">
										<td>@items.KullaniciAdi</td>
										<td>@((SUTFProjeYonetimi.Models.Enum.Yetkilendirme)items.Yetki)</td>
										<td>Etkin Değil</td>
										<td>
											<a href="~/Panel/KullaniciDuzenle/@items.ID" class="btn btn-warning hidden-sm hidden-xs"><i class="fa fa-pencil"></i></a>
											<a href="~/Panel/KullaniciSil/@items.ID" class="btn btn-danger hidden-sm hidden-xs"><i class="fa fa-times"></i></a>
											<a href="~/Panel/KullaniciDuzenle/@items.ID" class="btn btn-xs btn-warning hidden-md hidden-lg"><i class="fa fa-pencil"></i></a>
											<a href="~/Panel/KullaniciSil/@items.ID" class="btn btn-xs btn-danger hidden-md hidden-lg"><i class="fa fa-times"></i></a>
										</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@section scripts
{
	<script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
	<script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
	<script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
	<script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
	<script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>
	<script>
        $(document).ready(function () {
            pageSetUp();
            var responsiveHelper_dt_basic = undefined;
            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };
            $('#dt_basic').dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "oLanguage": {
                    "sSearch": '<span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>'
                },
                "preDrawCallback": function () {
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                    }
                },
                "rowCallback": function (nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function (oSettings) {
                    responsiveHelper_dt_basic.respond();
                }
            });
        })
	</script>
}